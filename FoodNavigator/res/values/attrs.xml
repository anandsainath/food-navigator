<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="font" format="string" />
        <attr name="textStyle" />
    </declare-styleable>

    <attr name="textStyle" format="enum">
        <enum name="normal" value="0" />
        <enum name="bold" value="1" />
        <enum name="italic" value="2" />
        <enum name="bold_italic" value="3" />
    </attr>
    
    <declare-styleable name="ImageMap">
		<attr name="map" format="string"/>
        <attr name="fitImageToScreen" format="boolean"/>
        <attr name="scaleFromOriginal" format="boolean"/>
        <attr name="maxSizeFactor" format="float"/>
	</declare-styleable>

</resources>